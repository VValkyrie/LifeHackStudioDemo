<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="240dp"
                android:layout_height="320dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingLeft="@dimen/title_padding"
                android:paddingTop="@dimen/main_padding"
                android:paddingRight="@dimen/title_padding"
                android:paddingBottom="@dimen/main_padding"
                tools:layout_editor_absoluteX="86dp" />


            <TextView

                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borderbottom"
                app:layout_constraintTop_toBottomOf="@id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingLeft="@dimen/title_padding"
                android:paddingTop="@dimen/main_padding"
                android:paddingRight="@dimen/title_padding"
                android:paddingBottom="@dimen/main_padding"
                android:textColor="@color/textColor"
                android:textSize="@dimen/title_font_size"
                android:textStyle="bold"
                tools:text="Рога и копыта"
                />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="22dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/borderbottom"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/titleView"
                android:drawableRight="@drawable/ic_baseline_phone_24"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="+79879876546541321"/>

            <TextView
                android:id="@+id/www"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="22dp"
                android:paddingLeft="8dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/colorPrimaryDark"
                android:drawableRight="@drawable/ic_baseline_language_24"
                android:paddingEnd="8dp"
                app:layout_constraintTop_toBottomOf="@id/phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="www.leningrad-spb.ru"
                android:background="@drawable/borderbottom"
                 />



            <TextView
                android:id="@+id/contentView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/www"
                android:paddingLeft="@dimen/content_padding"
                android:paddingTop="@dimen/main_padding"
                android:paddingRight="@dimen/content_padding"
                android:paddingBottom="@dimen/main_padding"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>